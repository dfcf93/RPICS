<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androidhive.xmlparsing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application android:label="@string/app_name" >
        <activity
            android:name="com.androidhive.xmlparsing.AndroidXMLParsingActivity"
            android:label="@string/app_name" >
        </activity>

        <!-- Single List Item View -->
        <activity
            android:name="com.androidhive.xmlparsing.SingleMenuItemActivity"
            android:label="Single Menu Item" >
        </activity>
        <activity
            android:name="com.androidhive.xmlparsing.RoadRunner"
            android:label="@string/title_activity_road_runner" >
        </activity>
        <activity
            android:name="com.androidhive.xmlparsing.Route"
            android:label="@string/title_activity_route" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.androidhive.xmlparsing.SimpleMap"
            android:label="@string/title_activity_simple_map" >
        </activity>
        <activity
            android:name="com.androidhive.xmlparsing.Routewithstopover"
            android:label="@string/title_activity_routewithstopover" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>